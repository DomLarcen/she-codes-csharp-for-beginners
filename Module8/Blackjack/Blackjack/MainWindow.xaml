<Window x:Class="Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Background="DarkGreen">
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="120">
                <TextBlock>Computer Score:</TextBlock>
                <TextBlock Name="ComputerScore"></TextBlock>
            </StackPanel>
            <StackPanel Name="ComputerCards" Orientation="Horizontal" Height="100"></StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Margin="5" Click="ButtonRestart_Click" HorizontalAlignment="Center">Start New Game</Button>
            <Button Width="100" Margin="5"  Click="ButtonPass_Click"  HorizontalAlignment="Center">Pass!</Button>
            <Button Width="100" Margin="5" Click="ButtonHitMe_Click" HorizontalAlignment="Center">Hit Me!</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="120">
                <TextBlock>My Score:</TextBlock>
                <TextBlock Name="MyScore"></TextBlock>
            </StackPanel>
            <StackPanel Name="MyCards" Orientation="Horizontal" Height="100"></StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
